{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm --filter frontend... build",
  "builds": [
    { "src": "frontend/next.config.js", "use": "@vercel/next" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ],
  "redirects": [
    { "source": "/gallery", "destination": "/examples", "permanent": true }
  ],
    "env": {
    "NEXT_PUBLIC_API_BASE": "/api",
    "NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL": "https://us-central1-maxvideoai-backend.cloudfunctions.net"
  }
}
